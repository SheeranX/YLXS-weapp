/**app.wxss**/
@import "/plugins/wxParse/wxParse.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  box-sizing: border-box;
}

.flex-row{
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}
.flex-column{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.s-round{
  justify-content: space-around;
}
.s-between{
  justify-content: space-between;
}
.f-center{
  justify-content: center;
}
.r-center{
  align-items: center
}
.font20{
  font-size: 20rpx;
}
.font22{
  font-size: 22rpx;
}
.font24{
  font-size: 24rpx;
}
.font28{
  font-size: 28rpx;
}
.font32{
  font-size: 32rpx;
}
.font36{
  font-size: 36rpx;
}
.font40{
  font-size: 40rpx;
}
.font48{
  font-size: 48rpx;
}

.txt-center{
  text-align-last: center
}
.txt-left{
  text-align: left;
}
.txt-right{
  text-align: right;
}
.bg-white{
  background: #fff;
}
.bg-red{
  background: #e9536c!important;
}
.success{
  color: #009377;
}

.info{
  color: #4886f9;
}
.black{
 color: #000;
}
.white{
  color: #fff;
}
.dark{
  color: #3e3e3e;
}

.gray{
  color: #666;
}
.danger{
 color: #e9536c;
}
.warning{
  color: #FFB800;
}
.bold{
  font-weight: 700;
}
.clear-border{
  border: none!important;
}
.padding-between{
  padding: 0 40rpx;
}
.border-btm{
  border-bottom: 2rpx solid #eee;
}
.margin-top30{
  margin-top: 20rpx;
}
.img-responsive{
  width: 100%;
  height: 100%; 
}
.img-round{
  border-radius: 4rpx;
}
.img-small{
  width: 80rpx;
  height: 80rpx;
}
.img-tiny{
  width: 60rpx;
  height: 60rpx;
}
.img-xs{
   width: 40rpx;
   height: 40rpx;
}
.txt-indent{
  text-indent: 20rpx;
}
.btn{
  text-align:center;
  vertical-align:middle;
  touch-action:manipulation;
  cursor:pointer;
  background-image:none;
  white-space:nowrap;
  user-select:none;
  font-size:24rpx;
  border-radius:2px;
  border:0!important;
  position:relative;
  text-decoration:none;
  height:44px;
  line-height:44px;
  box-shadow:inset 0 0 0 1px rgba(0,0,0,.1);
  color:#fff;
  background:#f7f7f7;
}
.btn-round{
  border-radius:44px;
}
.btn-danger{
  background: #e9536c;
}
.btn-small{
  height: 60rpx;
  line-height: 60rpx;
}
.top{
  padding-top: 150rpx;
}