/* components/float-review/index.wxss */
.font20{
  font-size: 20rpx;
}
view{
  overflow: visible;
}
.no-bg{
  background: transparent!important;
  border: none;
  font-size: 20rpx;
  color: #fff;
  box-shadow: none;
  right: -6rpx;
}
.review-float{
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: rgba(0, 0, 0, .7);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 100rpx;
  text-align: center;
  position: fixed;
  bottom: 80rpx;
  left: 50rpx;
}
.review-float>view{
  text-align: center;
  width: 120rpx;
}