/* components/contract/index.wxss */
.contract{
  padding: 20rpx;
}
.contract-list{
  padding: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
.contract-list:last-child{
  border-bottom: transparent;
}
.flex-row{
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}
.flex-column{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.r-center{
  align-items: center
}
.s-between{
  justify-content: space-between;
}
.contract-item{
  position: relative;
  padding-left:20rpx;
}
.relative{
  position: relative;
}
.txt-center{
  text-align-last: center
}
.font20{
  font-size: 20rpx;
}
.font22{
  font-size: 22rpx;
}
.font28{
  font-size: 28rpx;
}
.operate{
  display: flex;
  align-items: center;
  width:155rpx;
  justify-content:space-between;
}
.add-person{
  border: 1px solid #4886f9;
  margin: 40rpx 100rpx;
  padding: 10rpx 20rpx;
  border-radius: 80rpx;
  color: #4886f9;
  justify-content: center;
}
