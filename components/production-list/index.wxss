.font36 {
  font-size: 36rpx;
}

.blueColor {
  color: #3879d6;
}

.grayColor {
  color: #666;
}

.redColor {
  color: #e9536c;
}

.mg-right20 {
  margin-right: 20rpx;
}

.bookBtn {
  border: 1rpx solid #e9536c;
  border-radius: 8rpx;
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: #e9536c;
  color: #fff;
}

.row-container {
  /* min-height: 180rpx; *//* background-color: #f2f2f2; */
  border-bottom: 1rpx solid #e9eaec;
  padding: 20rpx 30rpx;
}

.row-left-box {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-top: 15rpx;
}

.item-title {
  margin-bottom: 25rpx;
}

.row-right-box {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  align-items: center;
  margin: 10rpx 0;
}

.item-price {
  margin-bottom: 15rpx;
}
