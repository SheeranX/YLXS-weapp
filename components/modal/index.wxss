/* components/modal/index.wxss */
.i-modal{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, .7);
  z-index: 99999;
}
.i-modal-content{
  width: 100%;
  background: #fff;
  min-height: 400rpx;
  max-height: 80%;
  overflow-y: scroll;
  position: fixed;
  z-index: 999999;
  transition:all linear .3s;
  box-shadow: 0 1px 20px rgba(0, 0, 0, .3);
}
.i-modal-content-bottom{
  bottom: 0;
  transform: translateY(150%);
}
.i-modal-content-top{
  top: 0;
  transform: translateY(-150%);
}
.hide{
  display: none;
}
.slide-down{
  transform: translateY(0);
  transition:all linear .3s;
}
.bg-hide{
  opacity: 0;
}