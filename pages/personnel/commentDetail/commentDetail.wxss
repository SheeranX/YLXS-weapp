/* pages/personnel/commentDetail/commentDetail.wxss */
page{
  background-color: #ebebf6;
}
.commentDetail-container {

  /* height: 100%; */
  overflow-y:auto; 
}

.mg-bottom20 {
  margin-bottom: 20rpx;
}

.comment-card {
  padding: 20rpx 40rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.h-center {
  align-items: center;
}

.border-top {
  border-top: 1rpx solid #eee;
}

textarea {
  width: 620rpx;
  min-height: 220rpx;
  padding: 15rpx 20rpx 0 15rpx;
  border: 1rpx solid #eee;
}
.upload-container{
  position: relative;
}
.upload{
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid #eee;
}

.upload-icon{
  text-align: center;
  margin:10rpx 8rpx;
}

.upload-desc{
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #666; 
  margin-bottom:20rpx; 
}
.sendComment {
  margin: 40rpx auto;
  width: 500rpx;
  height: 65rpx;
  line-height: 65rpx;
  background-color: #e9536c;
  color: #fff;
  border-radius: 40rpx;
  text-align: center;
  font-size: 32rpx;
}
.img-group image{
    margin-right: 20rpx;
}
.img-group>view{
  position: relative;
}
.img-size{
  width: 100rpx;
  height: 100rpx;
}
.myCanvas{
  position: fixed;
  left: 99999px;
}
.close{
  position: absolute;
  right: 5rpx;
  top: -14rpx;
  width:30rpx;
  height:30rpx;
  background:#fff;
  border-radius:50%;
  border:1px solid #ccc;
  line-height:26rpx; 
  text-align:center;
}
