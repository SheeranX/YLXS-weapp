<!--pages/travelStrategy/writeArticle/index.wxml-->
<view class='container padding-between'>
  <view class='img-album flex-column  r-center f-center'>
    <image src='' class='' wx:if="{{false}}"></image>
      <view class='flex-column r-center'>
         <view>
            <i-icon type="add" size="28" color='#3e3e3e'/>
         </view>
         <text class='font24 gray'>添加游记封面</text>
      </view>
  </view>
  <view>
    <textarea class='input-title' placeholder='输入游记标题'></textarea>
  </view>
  <view>
    <text class='font24 gray'>目的地：</text>
  </view>
  <view>
    <i-button type="ghost" shape="square" size="small" inline="false" i-class='btn-tiny'>玉龙雪山</i-button>
    <i-button type="ghost" shape="square" size="small" inline="false" i-class='btn-tiny'>印象丽江</i-button>
    <i-button type="ghost" shape="square" size="small" inline="false" i-class='btn-tiny'>拉海市</i-button>
    <i-button type="primary" shape="square" size="small" inline="false" i-class='btn-tiny'>拉海市</i-button>
  </view>
  <view>
     <textarea class='input-title content' placeholder='输入正文'></textarea>
  </view>
   <view>
    <text class='font24 gray'>关键词：</text>
   </view>
   <view>
      <i-button type="ghost" shape="square" size="small" inline="false" i-class='btn-tiny'>穷游</i-button>
      <i-button type="ghost" shape="square" size="small" inline="false" i-class='btn-tiny'>骑行</i-button>
      <i-button type="ghost" shape="square" size="small" inline="false" i-class='btn-tiny'>自驾</i-button>
      <i-button type="primary" shape="square" size="small" inline="false" i-class='btn-tiny'>美食</i-button>
   </view>
   <view class='btm-bar font28 bg-white'> 
    <i-row>
      <i-col span="4">
          <i-icon type="picture" size='28'/>
      </i-col>
      <i-col span="4">
         <i-icon type="keyboard" size='28' />
      </i-col>
      <i-col span="4" offset="12">
        <text class='info'>发表</text>
      </i-col>
    </i-row>
</view>
</view>
